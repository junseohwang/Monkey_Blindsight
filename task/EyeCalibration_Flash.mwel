    var flash_on_ms = 250          // ON duration (ms)
    var flash_off_ms = 400         // OFF duration (ms)
    var flash_rep = 0              // repetition counter at current target
    var cycles = 1                 // how many times to traverse the whole 3x3
    var completed_cycles = 0
    var do_repeat = 0
}

