group 'Global' {
    white_noise_background 'White Noise Background' ()
    blank_screen 'New Blank Screen' (color = 0,0,0)
}
group 'Fixation+Pursuit 2' {
    frame_list dynamicFix (
        stimulus_group = dynamicFixFrames
        loop = YES
        autoplay = YES
        )
    stimulus_group dynamicFixFrames {
        circular_fixation_point fixCircleDyn (
            color = fix_red,fix_green,fix_blue
            trigger_width = fix_win
            trigger_watch_x = eye_x
            trigger_watch_y = eye_y
            trigger_flag = on_fix_dyn
            x_size = fix_sz
            y_size = fix_sz
            x_position = fixX+cos(pursuitTheta*pi()/180)*fixDynMag*sin(2*pi()*fixHz*(nextFrameTime() - tStart)/1e6)
            y_position = fixY+sin(pursuitTheta*pi()/180)*fixDynMag*sin(2*pi()*fixHz*(nextFrameTime() - tStart)/1e6)
            rotation = 0
            alpha_multiplier = 1
            )
    }
}

circular_fixation_point fixation_point (
    trigger_width = fixation_width
    trigger_watch_x = eye_x
    trigger_watch_y = eye_y
    trigger_flag = eye_on_fixation_point
    //color = 0,0,0                                               //Y: was 1,0,0
    color = fixation_point_r, fixation_point_g, fixation_point_b  //Y: added this so we can send to blackrock
    x_size =1// fixation_point_size
    x_position = fixation_pos_x
    y_position = fixation_pos_y
    )


///////////////
// Protocols
///////////////


protocol 'Manual+Flash' {
    start_device_io (eye_tracker)
    queue_stimulus ('New Blank Screen')
    update_stimulus_display ()
    task Trials {
        state 'Initial' {
            localTrials = 0
            CorrectTrials = 0
            completed_cycles = 0
            grid_index = 0
            flash_rep = 0

            // start reward device
            start_io_device (firmata)

            // position first target on the 3x3 grid using fixDynMag as step
            fixation_pos_x = (-fixDynMag) + fixDynMag * (mod(grid_index,3))
            fixation_pos_y = ( fixDynMag) - fixDynMag * (floor(grid_index/3))

            // visible color (white); off state will be black on black
            fixation_point_r = 1
            fixation_point_g = 1
            fixation_point_b = 1

            live_queue_stimulus (fixation_point)
            update_stimulus_display ()
            goto ('Fix On')
        }
        state 'Fix On' {
            fixation_point_r = 1
            fixation_point_g = 1
            fixation_point_b = 1
            tStart = nextFrameTime()
            update_stimulus_display ()
            start_timer (
                timer = FlashOn
                duration = flash_on_ms // 10000
                duration_units = ms
                )
            start_timer (
                timer = fixWait
                duration = fixWaitDur // 10000
                duration_units = ms
                )
            goto (
                target = 'Trial Start'
                when = eye_on_fixation_point
                )
            timer_expired (
                target = 'Target Off'
                timer = FlashOn
                )
            timer_expired (
                target = 'Failure to fixate'
                timer = fixWait
                )
        }
        state 'Trial Start' {
            report ('Fixation acquired.')
            startTrial = 1
            start_timer (
                timer = HoldFix
                duration = fix_pur_HoldDur // 2500
                duration_units = ms
                )
            goto (
                target = Bad
                when = !eye_on_fixation_point
                )
            timer_expired (
                target = Reward
                timer = HoldFix
                )
        }
        state Reward {
            report ('Success!')
            CorrectTrials = CorrectTrials+1

action/play_sound(success_sound)
            fix_red = 0
            fix_blue = 0

            reward_line = true

            start_timer (
                timer = GreenTime
                duration = rewardDur+bonusRewDur
                duration_units = ms
                )
            timer_expired (
                target = 'End Trial'
                timer = GreenTime
                )
        }
        state 'End Trial' {
            report ('Ending Trial.')
            reward_line = false
            dequeue_stimulus (dynamicFix)
            update_stimulus_display ()

            /*  1) horizon left/right for vertical center
                2) horizon left/right for vertical upper
                3) vertical up/down for horizontal center
                4) vertical up/down for horizontal right
                */

            if (CorrectTrials%(2*nRep)==0){
                pursuitTheta = 90 - pursuitTheta
                fixX=0
                fixY=8
            }
            if (CorrectTrials%(2*nRep)!=0){
                if (CorrectTrials%nRep==0){
                    if (pursuitTheta==0){ // horizontal -> move up
                        fixY = fixDynMag // 8
                        fixX = 0
                    }
                    if (pursuitTheta==90){ // vertical -> mve right
                        fixX = fixDynMag
                        fixY = 8
                    }
                }
            }

            localTrials = localTrials+1
            endTrial = 1

            // prepare next target in the 3x3
            flash_rep = 0
            grid_index = grid_index + 1

            goto (
                target = 'Grid Done?'
                when = (grid_index >= 9)
                )

            // position next target
            fixation_pos_x = (-fixDynMag) + fixDynMag * (mod(grid_index,3))
            fixation_pos_y = ( fixDynMag) - fixDynMag * (floor(grid_index/3))

            goto (ITI)
        }
        state ITI {
            report ('ITI.')
            // dot OFF during ITI
            fixation_point_r = 0 
            fixation_point_g = 0 
            fixation_point_b = 0
            update_stimulus_display ()
            start_timer (
                timer = fix_pur_ITI
                duration = fix_pur_ITI_Dur // 250
                duration_units = ms
                )
            timer_expired (
                target = 'Fix On'
                timer = fix_pur_ITI
                )
        }
        state Bad {
            report ('Trial Failed.')
            dequeue_stimulus (dynamicFix)
            update_stimulus_display ()
            start_timer (
                timer = fix_pur_timeout
                duration = fix_pur_timeoutDur // 500
                duration_units = ms
                )
            timer_expired (
                target = 'End Trial'
                timer = fix_pur_timeout
                )
        }
        state 'Failure to fixate' {
            report ('Failure to fixate.')
            dequeue_stimulus (dynamicFix)
            start_timer (
                timer = NoFixWait
                duration = NoFixWaitDur  // 500
                duration_units = ms
                )
            timer_expired (
                target = 'Fix On'
                timer = NoFixWait
                )
        }
        state 'Target Off' {
            fixation_point_r = 0 
            fixation_point_g = 0 
            fixation_point_b = 0
            update_stimulus_display ()

            start_timer (
                timer = FlashOff 
                duration = flash_off_ms 
                duration_units = ms
                )
            timer_expired (
                target = 'Decide Repeat' 
                timer = FlashOff
                )
        }
        state 'Decide Repeat' {
            // compute whether we should flash again at this target
            do_repeat = (flash_rep + 1) < flashes_per_target

            // branch via transitions (NOT inside an if/else)
            goto (
                target = 'Repeat Flash'   
                when = do_repeat
                )
            goto (
                target = 'Advance Target' 
                when = !do_repeat
                )
        }
        state 'Decide Repeat' {
            // compute whether we should flash again at this target
            do_repeat = (flash_rep + 1) < flashes_per_target

            // branch via transitions (NOT inside an if/else)
            goto (
                target = 'Repeat Flash'   
                when = do_repeat
                )
            goto (
                target = 'Advance Target'
                when = !do_repeat
                )
        }
        state 'Advance Target' {
            // advance to next 3x3 cell
            flash_rep = 0
            localTrials = localTrials + 1
            grid_index = grid_index + 1

            // finished all 9 cells?
            goto (
                target = 'Grid Done?' 
                when = (grid_index >= 9)
                )

            // position next target and go ON again
            fixation_pos_x = (-fixDynMag) + fixDynMag * (mod(grid_index,3))
            fixation_pos_y = ( fixDynMag) - fixDynMag * (floor(grid_index/3))
            goto ('Fix On')
        }


        state 'Grid Done?' {
            completed_cycles = completed_cycles + 1
            goto (
                target = 'Exit Fixation Pursuit System' 
                when = (completed_cycles >= cycles)
                )

            // reset for another full 3×3 pass
            grid_index = 0
            flash_rep = 0
            fixation_pos_x = (-fixDynMag) + fixDynMag * (mod(grid_index,3))
            fixation_pos_y = ( fixDynMag) - fixDynMag * (floor(grid_index/3))
            goto ('Fix On')
        }

        state 'Exit Fixation Pursuit System' {
            report ('Leaving state system')
            yield ()
        }
    }
}

